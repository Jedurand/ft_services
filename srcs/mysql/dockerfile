from alpine:latest

RUN apk update && \
	apk add mysql mysql-client && \
	addgroup mysql mysql && \
	rm -rf /var/cache/apk/*

COPY /start.sh /bin/start.sh
COPY my.cnf /etc/mysql/my.cnf

RUN chmod 777 /bin/start.sh

VOLUME ["/var/lib/mysql"]

EXPOSE 3306

#RUN sh /bin/start.sh

ENTRYPOINT ["/bin/start.sh"]
